# Kenya Overwatch Environment Variables
# Copy this file to .env and fill in your values

# ==================== APP CONFIG ====================
OVERWATCH_ENV=production
DEBUG=false
APP_NAME=Kenya Overwatch
APP_VERSION=1.0.0

# ==================== DATABASE ====================
DATABASE_URL=postgresql://user:password@localhost:5432/kenya_overwatch
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ==================== AUTHENTICATION ====================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SESSION_SECRET=your-session-secret-key

# ==================== API ====================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,https://kenya-overwatch.go.ke

# ==================== AI PIPELINE ====================
AI_MODEL_PATH=/models
AI_CONFIDENCE_THRESHOLD=0.7
YOLO_MODEL_VERSION=8
ENABLE_WEAPON_DETECTION=true
ENABLE_ANPR=true

# ==================== WEBSOCKET ====================
WS_HOST=0.0.0.0
WS_PORT=8001

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FILE=/var/log/kenya-overwatch/api.log
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# ==================== SECURITY ====================
RATE_LIMIT_PER_MINUTE=60
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,mp4,pdf

# ==================== EMAIL ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@kenyaoverwatch.go.ke

# ==================== SMS ====================
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://sms-api.example.com

# ==================== MONITORING ====================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
